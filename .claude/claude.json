    },
    "code-reviewer": {
      "file": "agents/code-reviewer.md",
      "contract": "contracts/code-reviewer.contract",
      "domains": ["code-quality", "security", "performance", "testing", "best-practices"],
      "priority": 1
    },
    "security-specialist": {
      "file": "agents/security-specialist.md",
      "contract": "contracts/security-specialist.contract",
      "domains": ["security", "owasp", "authentication", "cryptography", "compliance", "threat-modeling"],
      "priority": 1
    },
    "bug-investigator": {
      "file": "agents/bug-investigator.md",
      "contract": "contracts/bug-investigator.contract",
      "domains": ["debugging", "root-cause-analysis", "incident-response", "diagnostics"],
      "priority": 1
    }
  },
  
  "workflows": {
    "full-stack-feature": [
      "frontend-architect",
      "database-architect",
      "backend-architect",
      "security-specialist",
      "python-expert",
      "ui-components-expert",
      "frontend-developer",
      "qc-automation-expert",
      "code-reviewer",
      "deployment-integration-expert"
    ],
    "frontend-only": [
      "frontend-architect",
      "ui-components-expert",
      "frontend-developer",
      "qc-automation-expert",
      "code-reviewer"
    ],
    "backend-only": [
      "backend-architect",
      "database-architect",
      "security-specialist",
      "python-expert",
      "qc-automation-expert",
      "code-reviewer"
    ],
    "infrastructure": [
      "devops-architect",
      "google-cloud-expert",
      "deployment-integration-expert",
      "security-specialist"
    ],
    "bug-fix": [
      "bug-investigator",
      "code-reviewer",
      "qc-automation-expert"
    ],
    "documentation": [
      "document-writer-expert",
      "api-documenter"
    ]
  },
  
  "governance": {
    "hooks_enabled": true,
    "pre_run_required": true,
    "post_run_validation": true,
    "validators": [
      "scorecard-validator",
      "write-zone-guard",
      "secret-scan",
      "diff-discipline",
      "format-lint",
      "hierarchy-governance"
    ]
  },
  
  "skills_integration": {
    "enabled": true,
    "skills_path": "skills/",
    "available_skills": [
      "docx",
      "xlsx",
      "pptx",
      "pdf",
      "test-generation",
      "code-review",
      "api-design",
      "dockerfile",
      "git-workflow"
    ]
  },
  
  "paths": {
    "task": "task.md",
    "work": "work.md",
    "scorecard": "scorecard.md",
    "context": "tasks/context_session_1.md",
    "agents": "agents/",
    "contracts": "contracts/",
    "hooks": "hooks/",
    "macros": "macros/",
    "skills": "skills/"
  },
  
  "rules": {
    "task_md_readonly": true,
    "require_write_zone_update": true,
    "no_secrets_in_output": true,
    "minimal_diffs_only": true,
    "scorecard_must_pass": true
  }
}
