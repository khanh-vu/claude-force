    },
    "devops-architect": {
      "file": "agents/devops-architect.md",
      "contract": "contracts/devops-architect.contract",
      "domains": ["infrastructure", "docker", "kubernetes", "iac"],
      "priority": 2
    },
    "google-cloud-expert": {
      "file": "agents/google-cloud-expert.md",
      "contract": "contracts/google-cloud-expert.contract",
      "domains": ["gcp", "cloud-run", "firestore", "cloud-functions"],
      "priority": 2
    },
    "qc-automation-expert": {
      "file": "agents/qc-automation-expert.md",
      "contract": "contracts/qc-automation-expert.contract",
      "domains": ["testing", "qa", "playwright", "jest", "automation"],
      "priority": 3
    },
    "document-writer-expert": {
      "file": "agents/document-writer-expert.md",
      "contract": "contracts/document-writer-expert.contract",
      "domains": ["documentation", "technical-writing", "markdown"],
