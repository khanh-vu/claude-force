    },
    "python-expert": {
      "file": "agents/python-expert.md",
      "contract": "contracts/python-expert.contract",
      "domains": ["python", "scripting", "automation", "cli"],
      "priority": 2
    },
    "database-architect": {
      "file": "agents/database-architect.md",
      "contract": "contracts/database-architect.contract",
      "domains": ["database", "schema", "sql", "migrations"],
      "priority": 1
    },
    "ui-components-expert": {
      "file": "agents/ui-components-expert.md",
      "contract": "contracts/ui-components-expert.contract",
      "domains": ["components", "react", "typescript", "design-system"],
      "priority": 2
    },
    "deployment-integration-expert": {
      "file": "agents/deployment-integration-expert.md",
      "contract": "contracts/deployment-integration-expert.contract",
      "domains": ["deployment", "ci-cd", "vercel", "configuration"],
